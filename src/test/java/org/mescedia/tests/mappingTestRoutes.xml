<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


    <bean id="log" class="org.mescedia.xsltExtensions.logger"/>
    <bean id="dbQuery" class="org.mescedia.xsltExtensions.dbQuery"/>

    <camelContext  id="tests" xmlns="http://camel.apache.org/schema/spring">

        <route id="xsltSimpleTransformerTest"  autoStartup="true" >
            <from uri="direct:xsltSimpleTransformerTestIn" />
            <to uri="xslt:file:data/mapping/d96a-header.simple.xslt" />
            <to uri="mock:xsltSimpleTransformerTestOut" />
        </route>

        <route id="xsltExtensionFunctionsTest"  autoStartup="true">
            <from uri="direct:xsltExtensionFunctionTestIn" />
            <to uri="xslt-saxon:file:data/mapping/d96a-header.logger.extensionFunc.xslt?saxonExtensionFunctions=#log" />
            <to uri="mock:xsltExtensionFunctionTestOut" />
        </route>


        <route id="xsltExtensionFunctionsListTest"  autoStartup="true">
            <from uri="direct:xsltExtensionFunctionListTestIn" />
            <to uri="xslt-saxon:file:data/mapping/d96a-header.dbquery.logger.extensionFunc.xslt?saxonExtensionFunctions=#log,#dbQuery" />
            <log loggingLevel="INFO" message="${body}" />
            <to uri="mock:xsltExtensionFunctionListTestOut" />
        </route>


        <route id="xquerySimpleTransformerTest"  autoStartup="true" >
            <from uri="direct:xquerySimpleTransformerTestIn" />
            <to uri="xquery:file:data/mapping/d96a-header.simple.xquery" />
            <to uri="mock:xquerySimpleTransformerTestOut" />
        </route>

    </camelContext>

</beans>